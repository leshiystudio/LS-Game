        <authentication-provider>
            <jdbc-user-service data-source-ref="dataSource"
                               users-by-username-query="select username, password, enabled
      	                                           from lsusers where username = ?"
                               authorities-by-username-query="select u.username, au.authority
      	                                                 from lsusers u
      	                                                 left join authorities au on u.id = au.user_id
       	                                                where u.username = ?" />
        </authentication-provider>
<!--        <authentication-provider user-service-ref='userDetailsServiceImpl'/> -->
    </authentication-manager>
    <beans:bean id="userService" class="ru.l8s.LSFightGame.DB.impl.UserDaoImpl">
        <beans:property name="dataSource" ref="dataSource"/>
    </beans:bean>
    <beans:bean id="characterService" class="ru.l8s.LSFightGame.DB.impl.CharacterDaoImpl">
